<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10">

    <ImageView
        android:id="@+id/iv_weather_dsc"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_snow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:text="@string/text_temp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_weather_dsc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_temp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintEnd_toStartOf="@id/tv_weather_dsc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_weather_dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_temp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tv_weather"
        app:layout_constraintEnd_toStartOf="@id/tv_temp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_temp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>